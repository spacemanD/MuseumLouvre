@model IEnumerable<DAL.EF.Entities.PopAuthor>

@{
    ViewData["Title"] = "Popularity";
}

<h1>View</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AuthorId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.MiddleName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.DeathDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author.Country)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AuthorId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rate)
            </td>
            <th>
                @Html.DisplayFor(modelItem => item.Author.Name)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Author.Surname)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Author.MiddleName)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Author.BirthDate)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Author.DeathDate)
            </th>
            <th>
                @Html.DisplayFor(modelItem => item.Author.Country)
            </th>
        </tr>
}
    </tbody>
</table>
