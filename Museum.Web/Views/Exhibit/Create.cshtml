                    <option value="">-- Select Author --</option>
                </select>
                <span asp-validation-for="AuthorId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Collection" class="control-label"></label>
                <select asp-for="CollectionId" class="form-control" asp-items="ViewBag.CollectionId">
                    <option value="">-- Select Collection --</option>
                </select>
                <span asp-validation-for="CollectionId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="CreationYear" class="control-label"></label>
                <input asp-for="CreationYear" class="form-control" />
                <span asp-validation-for="CreationYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Materials" class="control-label"></label>
                <input asp-for="Materials" class="form-control" />
                <span asp-validation-for="Materials" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Direction" class="control-label"></label>
                <select asp-for="Direction" asp-items="Html.GetEnumSelectList<DAL.EF.Entities.Enums.ArtDirection>()"></select>
                <span asp-validation-for="Direction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <select asp-for="Country" asp-items="Html.GetEnumSelectList<DAL.EF.Entities.Enums.CountryList>()"></select>
                <span asp-validation-for="Country" class="text-danger"></span>
